# ==============================
# OpenRouter API Configuration
# ==============================
# Your OpenRouter API key
OPENROUTER_API_KEY= # adding your api key

# OpenRouter model to use (default: deepseek-chat free model)
OPENROUTER_MODEL=qwen/qwen3-4b:free

# Optional: specify provider allowed in your account
# Leave blank for automatic routing
OPENROUTER_PROVIDER=

# ==============================
# Local file for Chroma DB
# ==============================
SAMPLE_FILE=sample2.txt
CHROMA_DB_PATH=./chroma_db

# ==============================
# Request timeout for OpenRouter
# ==============================
REQUEST_TIMEOUT=30

# ==============================
# Flask server port (optional)
# ==============================
PORT=5000

